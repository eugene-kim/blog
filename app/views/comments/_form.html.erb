<h4>Add a Comment</h4>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>

  <div>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Add Comment" %>
  </div>
<% end %>