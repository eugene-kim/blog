<ul>
	<% @post.comments.each do |comment| %>
		<li id="comment_<%= comment.id %>">
			<h4><%= comment.commenter %></h4>
			<p><%= comment.body %></p>
			<p>
				<%= link_to 'Destroy Comment', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
			</p>
		</li>
	<% end -%>
</ul>