<li id="post_<%= post.id %>">
	<h2><%= post.title %></h2>
	<h3><%= post.created_at %></h3>
	<p><%= raw post.body %></p>
	<%= link_to "Edit", edit_post_path(post), class: "btn btn-success btn-xs" %>
	<%= link_to "Delete", post, method: 'delete', 
															confirm: "Are you sure?", 
															class: "btn btn-danger btn-xs" %>
</li>