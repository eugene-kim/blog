<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<% flash.each do |name, message| %>
		<div id="flash_<%= name %>" class="alert">
			<%= message %>
		</div>
	<% end %>

	<%= yield %>

	<%= debug(params) %>

</div>
</body>
</html>
